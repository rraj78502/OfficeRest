# OfficeRest Application Environment Configuration
# Copy this file to .env and update the values for your deployment

# Backend API URL for frontend applications
# Examples:
# - Local development: http://localhost:8000
# - Local network: http://192.168.1.100:8000
# - Production: https://api.yourcompany.com
# - Staging: http://staging.yourcompany.com:8000
BACKEND_HOST=http://localhost:8000

# Database Configuration (for backend/.env)
MONGO_URI=mongodb://mongo:27017/REST

# JWT Configuration (for backend/.env)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_SECRET=your-access-token-secret-change-this
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_SECRET=your-refresh-token-secret-change-this
REFRESH_TOKEN_EXPIRY=10d

# Application Environment
NODE_ENV=production

# Server Port
PORT=8000

# Email Configuration (for backend/.env)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_FROM_NAME="Your App Name"

# Cloudinary Configuration (for backend/.env)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Nepal Telecom SMS Configuration (for backend/.env)
NTC_WSDL_URL=http://192.168.200.85/Authuser.asmx?wsdl
NTC_USERNAME=your-ntc-username
NTC_PASSWORD=your-ntc-password
NTC_BUSICODE=your-business-code

# OTP Configuration (for backend/.env)
OTP_SECRET_KEY=your-otp-secret-key
OTP_TOKEN_EXPIRY=5m
ENABLE_SMS_FALLBACK_TO_EMAIL=true

# Deployment Instructions:
# 1. Copy this file to .env in the root directory
# 2. Update BACKEND_HOST with your server's IP address or domain
# 3. Update backend/.env with the backend-specific configurations
# 4. Run: docker compose up --build -d
#
# Examples for different deployments:
#
# Local Network (192.168.x.x):
# BACKEND_HOST=http://192.168.1.100:8000
#
# VPS/Cloud Server:
# BACKEND_HOST=http://your-server-ip:8000
#
# Production with Domain:
# BACKEND_HOST=https://api.yourcompany.com